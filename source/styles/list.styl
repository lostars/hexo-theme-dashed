@import "variables.styl"

.theme-list
    margin: 0
    padding: 0
    list-style: none
    
    li
        margin: 0.25rem 0

        a
            color: foreground-color
            position: relative
            display: block
            text-decoration: none

            &::after
                content: ""
                border: 1px dashed light-color
                position: absolute
                bottom: 1ch
                left: 0
                width: 100%
                z-index: -1
            span
                background-color: white
                padding-right: 0.5rem
.posts-list
    li
        display: flex
        gap: 0.5rem
        position: relative

        span.side-info
            color: light-color
            flex-shrink: 0
            max-width: 50%
            display: flex

            span.category-tree
                display: block
                max-width: 100%
                white-space: nowrap
                overflow: hidden
                text-overflow: ellipsis

            > span.category-separator::before
                content: "\00a0"

        a.post-title
            flex-grow: 1

            div
                display: block
                max-width: 80%
