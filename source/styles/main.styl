@import "variables.styl"

@import "header.styl"
@import "list.styl"
@import "category-and-tag.styl"
@import "pagination.styl"
@import "footer.styl"

*
    box-sizing: border-box
    color: inherit
    font-family: inherit
    max-width: 100%
html
    width: 100dvw
    height: 100dvh
    display: flex
    padding: 30px 0
    overflow: auto
body
    color: foreground-color
    font-family: serif-font
    margin: auto
    padding: 0 25px
    width: 550px
    max-width: 100%
    max-height: 100%
    overflow: auto

h1
    margin: 1rem 0 0.5rem
    font-size: 1.75rem
main > header:first-child > h1
    margin-top: 0
a
    color: #131f9e
    text-decoration-thickness: 1.5px
    text-underline-offset: 2.5px
blockquote 
    margin: 0
    padding: 0 1.2rem
    border-style: solid
    border-color: light-color
    border-width: 0
    border-left-width: 3.5px

    footer
        text-align: right

        > *:first-child::before
            content: "\2014"
            margin-right: 0.75ch
        
        cite::before
            content: ", "
            margin-left: 0.2ch

    &.pullquote
        background-color: very-light-color
        width: min(50%, 200px)

        &.left
            float: left
            margin-right: 1rem

        &.right
            float: right
            margin-left: 1rem
            border-left-width: 0
            border-right-width: 3.5px
pre, code
    overflow: auto
    font-family: monospace
    line-height: 1.3
    background-color: very-light-color
    padding: 0.35ch 0.75ch
    margin: 0.2rem 0
    border-radius: 0.35ch
    vertical-align: middle
kbd
    background-color: very-light-color
    padding: 0.3rem 0.65rem
    border-radius: 0.15rem
    margin: 0.2rem calc(0.3rem + 2px) 0.2rem 0.3rem
    font-size: 0.8rem
    font-family: monospace-font
    box-shadow: 1.5px 1.5px light-color
    display: inline-block
    position: relative
    top: -1.5px
mark
    background-color: mark-color
table
    border-collapse: collapse
    border: 1px soild foreground-color
th
    border-color: foreground-color

    &, /td
        border: 1px solid light-colro
        padding: 0.5rem
div.video-container
    > iframe
        width: 100%;
        aspect-ratio: 16 / 9;
.fontawesome-icon
    width: 1em;
    height: 1em;
    fill: currentColor;
.socials
    display: flex;
    justify-content: center;
    gap: 5px;

